<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <RelativeLayout
        android:id="@+id/show_film_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pr_idi.mydatabaseexample.ShowFilmInfo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="Director: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView_director"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/show_director"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="Starring: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView_prot"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/show_protagonist"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="Country: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView_country"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/show_country"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="Year of Release:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView_year"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/show_year"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:text="Critic's Rating: "
            android:layout_width="match_parent"
            android:id="@+id/textView_rating"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textAlignment="center" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:layout_gravity="center_horizontal"
            android:theme="@style/RatingBar"/>

        <TextView
            android:text="Click on the stars to change the film's rating"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/instructions"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>

</LinearLayout>
